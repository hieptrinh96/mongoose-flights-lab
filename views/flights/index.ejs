<%- include('../partials/html-head') %>
  <link rel="stylesheet" href="/stylesheets/movies/index.css" />
  <%- include('../partials/nav') %>

    <main>
      <h1>Flight List</h1>
      <table>
        <thead>
          <tr>
            <th>Airline</th>
            <th>Airport</th>
            <th>Flight Number</th>
            <th>Departs</th>
          </tr>
        </thead>
        <tbody>
          <% flights.forEach(flight=> { %>
            <tr>
              <form action="/flights/<%= flight._id %>?_method=delete" class="delete-form" method="post">
                <td>
                  <button type="submit">X</button>

                  <a href="/flights/<%= flight._id %>">
                    <%= flight.airline %>
                  </a>
                </td>
                <td>
                  <%= flight.airport %>
                </td>
                <td>
                  <%= flight.flightNo %>
                </td>
                <td>
                  <%= flight.departs %>
                </td>
              </form>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </main>

    <%- include('../partials/footer') %>