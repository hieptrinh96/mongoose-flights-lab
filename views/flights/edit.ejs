<%- include('../partials/html-head') %>
  <link rel="stylesheet" href="/stylesheets/movies/index.css" />
  <%- include('../partials/nav') %>
    <main>
      <h1>Edit Flight</h1>
      <form id="new-form" action="/flights/<%= flight._id %>?_method=put" method="post" autocomplete="off">
        <label for="airline">Airline:</label>
        <select name="airline">
          <option value="American">American</option>
          <option value="Southwest">Southwest</option>
          <option value="United">United</option>
        </select>
        <label for="airport">Airport:</label>
        <select name="airport">
          <option value="AUS">AUS</option>
          <option value="DFW">DFW</option>
          <option value="LAX">LAX</option>
          <option value="SAN">SAN</option>
        </select>
        <label for="flightNo">Flight Number:</label>
        <input type="range" name="flightNo" min="10" max="9999">
        <label for="departs">Departs</label>
        <input type="datetime-local" name="departs">
        <button type="submit">Update Flight</button>
      </form>
    </main>






